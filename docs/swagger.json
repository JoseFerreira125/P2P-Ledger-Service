{
    "swagger": "2.0",
    "info": {
        "description": "A decentralized, peer-to-peer immutable ledger service.",
        "title": "Minimalist Immutable Ledger Service (MILS)",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/block/{index}": {
            "get": {
                "description": "Retrieves a specific block from the local blockchain by its index.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Blockchain"
                ],
                "summary": "Get a block by index",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Block index",
                        "name": "index",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ledger.Block"
                        }
                    },
                    "400": {
                        "description": "Missing or invalid block index",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Block not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/chain/verify": {
            "get": {
                "description": "Verifies the integrity of the node's entire local blockchain by checking the hash linkage of all blocks.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Blockchain"
                ],
                "summary": "Verify the blockchain",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.VerifyResponse"
                        }
                    }
                }
            }
        },
        "/mine": {
            "post": {
                "description": "Instructs the node to mine a new block from transactions in the mempool. This is an asynchronous operation.",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Blockchain"
                ],
                "summary": "Mine a new block",
                "responses": {
                    "202": {
                        "description": "Mining process started",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/transaction": {
            "post": {
                "description": "Adds a new transaction to the mempool and broadcasts it to peers.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Blockchain"
                ],
                "summary": "Submit a new transaction",
                "parameters": [
                    {
                        "description": "The transaction to add",
                        "name": "transaction",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ledger.Transaction"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Transaction added to mempool and broadcasted",
                        "schema": {
                            "type": "Created"
                        }
                    },
                    "400": {
                        "description": "Error reading request body or unmarshalling transaction",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.VerifyResponse": {
            "type": "object",
            "properties": {
                "is_valid": {
                    "type": "boolean"
                }
            }
        },
        "ledger.Block": {
            "type": "object",
            "properties": {
                "difficulty": {
                    "type": "integer"
                },
                "hash": {
                    "type": "string"
                },
                "index": {
                    "type": "integer"
                },
                "merkleRoot": {
                    "type": "string"
                },
                "nonce": {
                    "type": "integer"
                },
                "prevBlockHash": {
                    "type": "string"
                },
                "timestamp": {
                    "type": "integer"
                },
                "transactions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ledger.Transaction"
                    }
                }
            }
        },
        "ledger.Transaction": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "string"
                }
            }
        }
    }
}